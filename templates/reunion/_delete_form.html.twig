<form method="post" action="{{ path('reunion_delete', {'id': reunion.id}) }}" onsubmit="return confirm('Etes vous sure de voir supprimé le CR ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reunion.id) }}">
    <button class="btn btn-danger">Supprimé le CR</button>
</form>
