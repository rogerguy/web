{% extends 'base.html.twig' %}

{% block title %}Reunion index{% endblock %}

{% block body %}
    <h1>Reunion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date de la reunion</th>
                <th>Membres Presents</th>
                <th>Contenu</th>
             <th>Membres Absents</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{{ reunion.created|date('Y-m-d') }}</td>
                <td>{{ reunion.membrepresent }}</td>
                <td>{{ reunion.contenu }}</td>
                <td>{{ reunion.membreabsent }}</td>
                <td>
                    <a href="{{ path('reunion_show', {'id': reunion.id}) }}">show</a>
                    <a href="{{ path('reunion_edit', {'id': reunion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reunion_new') }}">Create new</a>
{% endblock %}
